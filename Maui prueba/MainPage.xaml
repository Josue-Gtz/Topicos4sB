            <Image
            Source="carpincho7.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a hovercraft number nine" />
            <Image
            Source="carpincho7.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a hovercraft number nine" />
            <Image
            Source="carpincho7.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a hovercraft number nine" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
