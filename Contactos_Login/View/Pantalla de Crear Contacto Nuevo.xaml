<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_5.Pantalla_de_Crear_Contacto_Nuevo"
             Title="Pantalla_de_Crear_Contacto_Nuevo">
    <FlexLayout Direction="Column" AlignItems="Start"
JustifyContent="Center" Padding="20">
        <Entry Placeholder="Nombre" WidthRequest="250" />
        <Entry Placeholder="Teléfono" WidthRequest="250" />
        <Entry Placeholder="Correo" WidthRequest="250" />
        <Entry Placeholder="Dirección" WidthRequest="250" />

        <Button Text="Guardar Contacto" WidthRequest="250" />
    </FlexLayout>
</ContentPage>